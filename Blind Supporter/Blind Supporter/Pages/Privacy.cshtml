@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Circle Volume and Drawing</title>
	<style>
		#canvas {
			border: 1px solid black;
			margin-top: 20px;
		}
	</style>
</head>
<body>
	<label for="radius">Enter the radius of the circle:</label>
	<input type="number" id="radius">
	<button onclick="calculateVolume()">Calculate Volume</button>
	<p id="result"></p>
	<canvas id="canvas" width="400" height="400"></canvas>
	<script>
		function calculateVolume() {
			const radius = document.getElementById("radius").value;
			const volume = (4/3) * Math.PI * Math.pow(radius, 3);
			document.getElementById("result").innerHTML = `The volume of the circle is ${volume.toFixed(2)}.`;
			drawCircle(radius);
		}

		function drawCircle(radius) {
			const canvas = document.getElementById("canvas");
			const context = canvas.getContext("2d");
			context.clearRect(0, 0, canvas.width, canvas.height);
			context.beginPath();
			context.arc(canvas.width/2, canvas.height/2, radius, 0, 2 * Math.PI);
			context.stroke();
		}
	</script>
</body>
</html>
